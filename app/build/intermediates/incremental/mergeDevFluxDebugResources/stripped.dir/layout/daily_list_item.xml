<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                      
                                                   
           

    <RelativeLayout
        android:id="@+id/dailyListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackground"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:context=".ui.DailyForecastActivity" android:tag="layout/daily_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/dayLabel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:tag="binding_1"                   
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:Text="Today" />

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/dayLabel"
            android:textSize="24sp"
            android:tag="binding_2"        
            app:srcCompat="@drawable/cloudy" />

        <TextView
            android:id="@+id/summaryLabel"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconImageView"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:tag="binding_3"                      
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text="N/A" />

        <TextView
            android:id="@+id/temperatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:tag="binding_4"                          
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:Text="50" />

    </RelativeLayout>
         