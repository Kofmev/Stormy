<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                      
                                                   
           

    <RelativeLayout
        android:id="@+id/dailyListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/appBackground"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:context=".ui.DailyForecastActivity" android:tag="layout/daily_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/dayLabel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="01-jan."                                       
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:Text="Today"  android:tag="binding_1"/>

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dayLabel"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="20sp"
            android:tag="binding_2"        
            app:srcCompat="@drawable/cloudy" />

        <TextView
            android:id="@+id/summaryLabel"
            android:layout_width="175sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/iconImageView"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:tag="binding_3"                      
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="N/A" />

        <TextView
            android:id="@+id/temperatureLabel"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/summaryLabel"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:text="12"                                                          
            android:textColor="@android:color/white"
            android:textSize="20sp"  android:tag="binding_4"/>

        <ImageView
            android:id="@+id/degreeSmallView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/temperatureLabel"
            android:layout_marginTop="-26dp"
            android:layout_toEndOf="@id/temperatureLabel"
            app:srcCompat="@drawable/degrees_celcius_small" />

    </RelativeLayout>
         